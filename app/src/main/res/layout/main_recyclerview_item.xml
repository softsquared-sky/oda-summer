<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_main_oda_thumnail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/tmp_thumnail_img"/>

        <CheckBox
            android:id="@+id/cb_main_oda_check"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_check_box"
            android:button="@null"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_main_oda_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        android:text="알랄라aaaaaaaaaaaa"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오다가 "/>
        <TextView
            android:id="@+id/tv_main_oda_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9000"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

</LinearLayout>