<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_order_product_thumnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/tmp_thumnail_img" />

    <TextView
        android:id="@+id/tv_order_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="48dp"
        android:layout_marginStart="14dp"
        android:textSize="16sp"
        android:textColor="@color/colorNormalGray"
        android:text="제목이 없습니aaaaaaaaaaaaaaaaaaaaaaaaaaa다."
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_order_product_thumnail"
        android:layout_alignTop="@+id/iv_order_product_thumnail"
        />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오다가 "
        android:textSize="14sp"
        android:textColor="@color/colorNormalGray"
        android:layout_marginStart="14dp"
        android:layout_toRightOf="@+id/iv_order_product_thumnail"
        android:layout_alignBottom="@+id/iv_order_product_thumnail"
        />

    <TextView
        android:layout_marginStart="6dp"
        android:id="@+id/tv_order_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9,000원 /"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:lineSpacingExtra="3sp"
        android:layout_toRightOf="@+id/textview1"
        android:layout_alignBottom="@+id/textview1"
        />
    <TextView
        android:layout_marginStart="6dp"
        android:id="@+id/tv_order_product_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3개"
        android:textColor="@color/colorNormalGray"
        android:textSize="16sp"
        android:lineSpacingExtra="3sp"
        android:layout_toRightOf="@+id/tv_order_product_price"
        android:layout_alignBottom="@+id/tv_order_product_price"
        />

</RelativeLayout>