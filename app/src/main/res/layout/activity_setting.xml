<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_setting_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:src="@drawable/ic_arrow_back" />


        <TextView
            android:id="@+id/tv_setting_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="설정"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/drop_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            android:id="@+id/tv_setting_coupon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingStart="25dp"
            android:text="푸쉬알림"
            android:textColor="@color/colorNormalGray"
            android:textSize="16sp" />
        <Switch
            android:id="@+id/setting_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:track="@drawable/custom_switch_track_selector"
            android:thumb="@drawable/custom_switch_thumb_selector"
            android:layout_marginEnd="18dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drop_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            android:id="@+id/tv_setting_update_user_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingStart="25dp"
            android:text="회원정보수정"
            android:textColor="@color/colorNormalGray"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drop_shadow" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">


        <TextView
            android:id="@+id/tv_setting_customer_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingStart="25dp"
            android:text="고객센터"
            android:textColor="@color/colorNormalGray"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drop_shadow" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">


        <TextView
            android:id="@+id/tv_setting_logout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingStart="25dp"
            android:text="로그아웃"
            android:textColor="@color/colorNormalGray"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drop_shadow" />
</LinearLayout>