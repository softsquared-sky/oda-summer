<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:textSize="16sp"
            android:textColor="@color/colorNormalGray"
            android:text="바로 주문하기 선택상품 "
            />
        <TextView
            android:id="@+id/tv_main_oda_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorNormalGray"
            android:textStyle="bold"
            android:text="0"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorNormalGray"
            android:text="개"
            />

        <Button
            android:id="@+id/btn_main_select_all_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체선택"
            android:layout_marginEnd="17dp"
            android:textSize="16sp"
            android:lineSpacingExtra="10sp"
            android:background="@android:color/transparent"
            android:layout_marginStart="5dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_checkbox_off"
            android:textColor="@color/colorGray"
            android:buttonTint="@color/cursorColor"

            />
    </LinearLayout>

</FrameLayout>
