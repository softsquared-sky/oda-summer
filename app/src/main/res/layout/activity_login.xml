<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.softsquared.oda.src.login.LoginActivity"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_background"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_login" />
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_login_id"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디"
                android:textColorHint="#9b9b9b"
                android:textSize="16sp"
                android:textColor="#6fccd7"
                android:lineSpacingExtra="10sp"
                android:singleLine="true"
                android:theme="@style/EditTheme"
                android:inputType="text"
                android:nextFocusDown="@id/et_login_password"/>


            <EditText
                android:id="@+id/et_login_password"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:textColor="#9b9b9b"
                android:ems="10"
                android:lineSpacingExtra="10sp"
                android:textSize="16sp"
                android:textColorHint="#9b9b9b"
                android:singleLine="true"
                android:inputType="textPassword"
                android:theme="@style/EditTheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자동로그인"
                android:textSize="16sp"
                android:lineSpacingExtra="10sp"
                android:background="@android:color/transparent"
                android:layout_marginStart="5dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_checkbox_off"
                android:textColor="#9b9b9b"
                android:buttonTint="@color/cursorColor"
                android:checked="false"
                />

            <!--<TextView
                android:id="@+id/auto_login"
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#9b9b9b"
                android:lineSpacingExtra="10sp"
                android:layout_weight="1"
                android:text="자동로그인"
                />-->

            <TextView
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#9b9b9b"
                android:lineSpacingExtra="10sp"
                android:text="비밀번호 찾기"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:textColor="@color/login_text_selector"
                android:background="@drawable/login_button_selector"
                android:text="로그인"
                 />
            <Button
                android:id="@+id/btn_join"
                android:layout_marginTop="21dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:textColor="@color/login_text_selector"
                android:background="@drawable/login_button_selector"
                android:text="회원가입"
                 />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>